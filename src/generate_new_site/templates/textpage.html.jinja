{# Jinja2 template for EOT textpage (section) generation
## -----------------------------------------------------------------------------
## Included templates:
##  navbar.html.jinja
##  sidebar.html.jinja
## -----------------------------------------------------------------------------
## Required parameters:
##  this_section
## -----------------------------------------------------------------------------
##  this_section : Section, defined in text_classes.py
## -----------------------------------------------------------------------------
#}
{% extends "base.html.jinja" %}

{% block title %}{{ this_section['name'] }}{% endblock %}

{% block styles %}
  {{ super() }}
  <link href="css/textpage.css" rel="stylesheet">
{% endblock %}

{% block page_body %}
  {% include "shared_elements/navbar.html.jinja" %}
  <div class="container-fluid">
    <div class="row">
      {% include "shared_elements/sidebar.html.jinja" %}
      <div class="col-md" style="overflow-y: scroll;">
        <h1>{{ this_section.name }}</h1>
        # for content in this_section.content:
          # if content.type == "paragraph"
          <p>{{ content.content }}</p>
          # endif
          # if content.type == "italic-title"
          <p><i>{{ content.content }}</i></p>
          # endif
        # endfor
        ## !!TODO!! pagination
      </div>
    </div>
  </div>
{% endblock %}
