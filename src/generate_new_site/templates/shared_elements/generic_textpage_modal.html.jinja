{# Jinja2 template for modals and related JS to display figures references, and tables
## Added to page templates with {% include "modal.html.jinja" %}
#}
<div class="modal" id="genModal" tabindex="-1" role="dialog" aria-labelledby="modalLabel" aria-hidden="true">
  <div class="modal-lg modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header modal-header-generic-textpage">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
        <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body" id="modal-body">
      </div>
    </div>
  </div>
</div>
<div class="modal" id="tableImgModal" tabindex="-1" role="dialog" aria-labelledby="modalLabel" aria-hidden="true">
  <div class="modal-lg modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header modal-header-generic-textpage">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
        <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body" id="table-img-modal-body">
      </div>
    </div>
  </div>
</div>
<script src="../../assets/js/jquery.min.js"></script>
<script src="../../assets/js/lightgallery-all.js"></script>
