{# Jinja2 template for EOT pagination
## -----------------------------------------------------------------------------
## Required parameters:
##  pagination : dict
##    prev_page_href : Path
##    this_page_num  : str
##    next_page_href : Path
#}
<nav aria-label="Page navigation">
  <ul class="pagination justify-content-center">
    {% if pagination.prev_page_href%}
    <li class="page-item">
      <a class="page-link" href="{{ pagination.prev_page_href }}">Previous</a>
    </li>
    {% endif %}
    <li class="page-item active">
      <a class="page-link" id="pageNumClickable" data-toggle="popover">{{ pagination.this_page_num }}</a>
    </li>
    {% if pagination.next_page_href%}
    <li class="page-item">
      <a class="page-link" href="{{ pagination.next_page_href }}">Next</a>
    </li>
    {% endif %}
  </ul>
</nav>
